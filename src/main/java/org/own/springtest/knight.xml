<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" 
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="quest" class="org.own.springtest.HolyGrailQuest"></bean>
    <bean id="knight" class="org.own.springtest.KnightOfTheRoundTable">
        <constructor-arg>
            <value>Artemis</value>
        </constructor-arg>
        <property name="quest">
            <ref bean="quest"/>
        </property>
    </bean>
</beans>